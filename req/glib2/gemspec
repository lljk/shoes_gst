# -*- encoding: utf-8 -*-

Gem::Specification.new do |s|
  s.name = %q{glib2}
  s.version = "0.90.8"

  s.required_rubygems_version = Gem::Requirement.new(">= 0") if s.respond_to? :required_rubygems_version=
  s.authors = ["The Ruby-GNOME2 Proejct Team"]
  s.date = %q{2011-03-03}
  s.description = %q{Ruby/GLib2 is a Ruby binding of GLib-2.x.}
  s.email = %q{ruby-gnome2-devel-en@lists.sourceforge.net}
  s.extensions = ["ext/glib2/extconf.rb"]
  s.files = ["ext/glib2/extconf.rb"]
  s.homepage = %q{http://ruby-gnome2.sourceforge.jp/}
  s.require_paths = ["lib"]
  s.required_ruby_version = Gem::Requirement.new(">= 1.8.5")
  s.rubygems_version = %q{1.6.2}
  s.summary = %q{Ruby/GLib2 is a Ruby binding of GLib-2.x.}

  if s.respond_to? :specification_version then
    s.specification_version = 3

    if Gem::Version.new(Gem::VERSION) >= Gem::Version.new('1.2.0') then
      s.add_runtime_dependency(%q<pkg-config>, [">= 0"])
    else
      s.add_dependency(%q<pkg-config>, [">= 0"])
    end
  else
    s.add_dependency(%q<pkg-config>, [">= 0"])
  end
end
